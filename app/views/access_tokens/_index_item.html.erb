<%= tag.div id: dom_id(access_token), class: "mb-6 mt-4 grid grid-cols-3" do %>
  <p class="inline text-gray-500 lg:text-2xl dark:text-gray-400">
    <%= link_to access_token.name, access_token, class: "" %>
  </p>
  <div class="text-center">
    <%= button_to "Delete",
                  access_token_path(access_token),
                  method: :delete,
                  form: { data: { turbo_confirm: "Delete Access Token?" } },
                  class: "w-min-full px-5 py-2.5 text-center rounded-lg font-medium text-sm rounded-lg button py-3 px-5 bg-red-600 hover:bg-gray-300 inline-block text-white" %>
  </div>
  <div class="text-center">
    <%= button_tag "How To",
                   popovertarget: "access_token_k8s_how_to_#{access_token.id}",
                   popovertargetaction: "show",
                   class: "w-min-full px-5 py-2.5text-center rounded-lg font-medium text-sm rounded-lg button py-3 px-5 bg-blue-600 hover:bg-gray-300 inline-block text-white" %>
  </div>
<% end %>
<hr class="h-px my-6 bg-gray-800 border-2 dark:bg-gray-700">

<%= render partial: 'access_token_k8s_snippet', locals: { access_token: access_token } %>
