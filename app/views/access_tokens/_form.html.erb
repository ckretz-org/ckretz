<%= form_with(model: access_token, class: "contents") do |form| %>
  <% if access_token.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(access_token.errors.count, "error") %> prohibited this access_token from being saved:</h2>

      <ul>
        <% access_token.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="inline">
    <%= form.label :name, "Name:", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>

    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
