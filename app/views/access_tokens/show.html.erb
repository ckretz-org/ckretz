<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @access_token %>

    <div class="inline-block ml-2">
      <%= button_to "Destroy this access_token", access_token_path(@access_token), method: :delete, class: "mt-2 px-5 py-2.5 rounded-lg bg-gray-100 font-medium text-sm" %>
    </div>
    <%= link_to "Back to access_tokens", access_tokens_path, class: "ml-2 py-2.5 px-5 rounded-lg bg-gray-100 font-medium text-sm" %>
  </div>
</div>

