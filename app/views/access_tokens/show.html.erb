<div class="mx-auto md:w-2/3 w-full flex" data-controller="access_tokens">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <input class="hidden" data-access_tokens-target="token" class="" value="<%= @access_token.token %>">
      <button data-action="click->access_tokens#copyToClipboard" class="bg-blue-500 text-white p-2 rounded-lg">Copy To Clipboard</button>
    <% end %>

    <%= render @access_token %>

    <div class="inline-block mt-20 flex flex-col space-y-4">
      <%= button_to "Destroy this access_token", access_token_path(@access_token), method: :delete,
                    class: "w-full px-5 py-2.5 text-center rounded-lg font-medium text-sm rounded-lg button py-3 px-5 bg-blue-600 hover:bg-gray-300 inline-block text-white" %>
      <%= link_to "Back to access_tokens", access_tokens_path,
                  class: "w-full py-2.5 px-5 text-center rounded-lg font-medium text-sm rounded-lg button py-3 px-5 bg-blue-600 hover:bg-gray-300 inline-block  text-white" %>
      <%= button_tag "How to use", popovertarget: "access_token_k8s_how_to", popovertargetaction: "show",
                     class: "w-full py-2.5 px-5 text-center rounded-lg font-medium text-sm rounded-lg button py-3 px-5 bg-blue-600 hover:bg-gray-300 inline-block text-white" %>
    </div>
  </div>
</div>


<div id="access_token_k8s_how_to" class="" popover="auto">
  <div class="bg-white p-4 rounded-lg w-full">
    <h2 class="text-gray-500 grow text-lg font-bold inline-block">K8S</h2>
    <pre class="border">
    <code>
---
apiVersion: external-secrets.io/v1beta1
  kind: SecretStore
metadata:
  name: ckretz-webhook-backend-1
spec:
  provider:
    webhook:
      url: "https://<%= ENV.fetch('API_DOMAIN_NAME', 'app.ckretz.com') %>/secrets/{{ .remoteRef.key }}.json"
    result:
      jsonPath: "$.values"
    headers:
      Content-Type: application/json
      Authorization: bearer {{ print .auth.token }}
  secrets:
    - name: auth
  secretRef:
    name: ckretz-webhook-credentials
---
apiVersion: v1
kind: Secret
metadata:
  name: ckretz-webhook-credentials
data:
  token: <%= @access_token.token %>
    </code>
    </pre>
  </div>
  <div class="text-center">
    <button class="text-lg py-2.5 px-5 rounded-lg text-white button bg-blue-600 inline-block font-medium cursor-pointer" onclick="document.querySelector('#access_token_k8s_how_to').hidePopover();">Close</button>
  </div>
</div>
