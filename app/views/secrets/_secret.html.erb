<div id="<%= dom_id secret %>" class="py-2.5">
  <p class="inline text-gray-100 lg:text-2xl dark:text-gray-200"><%= secret.name %></p>
  <% if action_name != "show" %>
    <%= link_to "Show this secret", secret, class: "ml-2 py-2.5 px-5 rounded-lg bg-gray-100 font-medium text-sm bg-gray-100 inline-block" %>
    <%= link_to "Edit this secret", edit_secret_path(secret), class: "ml-2 py-2.5 px-5 rounded-lg bg-gray-100 font-medium text-sm bg-gray-100 inline-block" %>
    <hr class="mt-6">
  <% end %>
</div>
