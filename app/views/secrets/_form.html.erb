<%= form_with(model: secret, id: "new_secret", class: "contents") do |form| %>
  <% if secret.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(secret.errors.count, "error") %> prohibited this secret from being saved:</h2>

      <ul>
        <% secret.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="inline">
    <fieldset class="mb-8">
      <legend class="text-xl font-bold text-gray-500">Secret</legend>
      <%= form.label :name, "Name:", class: "inline text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      <%= form.text_field :name, class: "mt-1 inline w-full rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </fieldset>

    <div id="secret_values">
      <h1 class="text-xl font-bold text-gray-500">Values</h1>
      <%= render partial: "secret_value", collection: secret.secret_values %>
    </div>
    <div class="mt-6">
      <%= link_to "Add Value", secret_value_field_secrets_path, data: { turbo_stream: true }, class: "w-full text-center py-3 rounded-lg text-white inline-block bg-blue-600 hover:bg-blue-800" %>
    </div>
    <hr/>

    <div class="mt-6 flex flex-row justify-stretch space-x-4">
      <%= form.submit class: "w-full rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <%= link_to "Cancel", secret, class: "w-full rounded-lg text-center py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>
