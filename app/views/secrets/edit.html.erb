<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing secret</h1>

  <%= turbo_frame_tag dom_id(@secret) do %>
    <%= render "form", secret: @secret %>
  <% end %>

  <%= link_to "Show this secret", @secret, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to secrets", secrets_path, "data-turbo-frame": "", class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
