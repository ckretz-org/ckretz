{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.11.0/.schema/devbox.schema.json",
  "packages": {
    "glibcLocales": {
      "version":   "latest",
      "platforms": ["aarch64-linux"]
    },
    "redis": "latest",
    "postgresql_16": {
      "version": "latest"
    },
    "go-task": "latest",
    "ruby": "3.3.1",
    "git": "latest"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "export PS1='ðŸ“¦ devbox> '"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "install_pg_vector": [
        "echo 'Installing pg_vector extension'",
        "cd /tmp",
        "git clone --branch v0.7.1 https://github.com/pgvector/pgvector.git",
        "cd ./pgvector",
        "make",
        "sudo make install",
        "cd /tmp",
        "rm -rf /tmp/pgvector"
      ]
    }
  }
}
